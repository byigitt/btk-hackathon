{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "style": {
          "useImportType": "off"
        },
        "correctness": {
          "noChildrenProp": "off",
          "useJsxKeyInIterable": "off"
        },
        "suspicious": {
          "noArrayIndexKey": "off"
        }
      }
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf",
      "ignore": []
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "always",
        "jsxQuoteStyle": "double",
        "semicolons": "always",
        "quoteProperties": "asNeeded",
        "bracketSpacing": true,
        "bracketSameLine": false
      }
    }
  }